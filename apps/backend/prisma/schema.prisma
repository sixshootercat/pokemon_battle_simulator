generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pokemon {
  id          String       @id @default(uuid())
  type        PokemonType
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  hp          Int
  attack      Int
  name        String       @unique
  description String
  imageUrl    String?
  weakness    PokemonType
  resistance  PokemonType?
}

enum PokemonType {
  NORMAL
  FIRE
  WATER
  ELECTRIC
  GRASS
  ICE
  FIGHTING
  POISON
  GROUND
  FLYING
  PSYCHIC
  BUG
  ROCK
  GHOST
  DRAGON
  DARK
  STEEL
  FAIRY
}
